{
  "compilerOptions": {
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "jsx": "react-jsx"
  },
  "ts-node": {
    "swc": true
  },
  "include": [
    "src/**/*",    
    ".medusa/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".medusa/server",
    ".medusa/admin",
    ".cache"
  ]
}

